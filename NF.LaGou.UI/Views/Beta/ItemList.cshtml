@{
    ViewBag.Title = "ItemList";
}

<style>
    div{
        display:block;
    }
    #top .slogn{
        width:100%;
        height:166px;
        min-width:1200px;
        margin:0 auto;
        line-height:166px;
        background:url(/Images/slogn.jpg) no-repeat center top;
        background-size:cover;
        color:#fff;
        text-align:center;
        font-size:36px;
    }
    #container{
        min-width:1200px;
        margin:0 auto;
    }
    #contentContainer {
        width: 1200px;
        margin: 0 auto;
    }
    #contentContainer .tabslist{
        zoom:1;
        border-bottom:1px solid #ccc;
        line-height:52px;
        margin-top:18px;
        height:52px;
    }
    #contentContainer .tabslist a{
        float:left;
        padding:0 18px;
        font-size:16px;
        color:#999;
        cursor:pointer;
    }
    #contentContainer .tabslist a.active{
        color:#333;
        line-height:49px;
        font-weight:700;
        border-bottom:3px solid #2b2d2e;
        margin-bottom:-1px;
    }
    ul{
        margin:0;
        padding:0;
        list-style:none;
        display:block;
    }
    #contentContainer .projectlist ul {
        width: 1200px;
        height: 1290px;
        margin:0 auto;
        background-color:#b9b5b5;
        zoom: 1;
        margin-top: 14px;
        text-align: center;
    }
</style>



<div id="top">
    <div class="slogn">这些项目都在等你来完成</div>
</div>
<div id="container">
    <div id="contentContainer">
        <div class="tabslist">
            <a class="active" href="#">全部</a>
            <a href="#">开发</a>
            <a href="#">设计</a>
            <a href="#">市场/运营</a>
            <a href="#">产品</a>
        </div>
        <div class="projectlist">
            <ul></ul>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.8.2.js"></script>
<script type="text/javascript">
    $(function () {
        $(".tabslist a").bind("click", function () {
            $(".tabslist a:not(this)").removeClass("active");
            $(this).addClass("active");
        });
    });
    
</script>